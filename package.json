{
  "name": "webpack-react",
  "version": "1.0.0",
  "description": "Studuing Project",
  "main": "index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config webpack/webpack.config.js --env env=prod",
    "start": "webpack serve --config webpack/webpack.config.js --env env=dev",
    "stylelint": "stylelint \"src/**/*.{css,scss}\"",
    "stylelint:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
    "lint": "eslint --fix",
    "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" --ignore-path ./.prettierignore",
    "check": "npm run stylelint:fix && npm run lint && npm run format",
    "commit": "npm run check && cz",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Maria Bakhareva",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.2",
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "commitizen": "^4.3.1",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.2",
    "cssnano": "^7.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "html-webpack-plugin": "^5.6.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mini-css-extract-plugin": "^2.10.0",
    "postcss-loader": "^8.2.0",
    "react-refresh": "^0.18.0",
    "sass": "^1.97.2",
    "sass-loader": "^16.0.6",
    "standard-version": "^9.5.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^6.0.1"
  },
  "lint-staged": {
    "*.{css,scss}": "npm run stylelint:fix",
    "*.{js,jsx,ts,tsx}": "npm run lint",
    "*.{js,jsx,ts,tsx,json,css,scss,md}": "npm run format"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
